---
import './style.css'
import { Image } from "astro:assets";
import Image1 from "../../../public/Images/Carrusel/Image1.jpg";
import Image2 from "../../../public/Images/Carrusel/Image2.jpg";
import Image3 from "../../../public/Images/Carrusel/Image3.jpg";
import Image4 from "../../../public/Images/Carrusel/Image4.jpg";
import Image5 from "../../../public/Images/Carrusel/Image5.jpg";
import Image6 from "../../../public/Images/Carrusel/Image6.jpg";

---

<section class="slider w-full">
  <div class="slider__container container">
    <img src="/Images/Icons/leftarrow.svg" class="slider__arrow" id="before" alt="left" />

    <section class="slider__body slider__body--show" data-id="1">
      <figure class="slider__picture">
        <Image src={Image1} alt="Primer Imagen" class="slider__img" />
      </figure>
    </section>

    <section class="slider__body" data-id="2">
      <figure class="slider__picture">
        <Image src={Image2} alt="Segundo Imagen" class="slider__img" />
      </figure>
    </section>

    <section class="slider__body" data-id="3">
      <figure class="slider__picture">
        <Image src={Image3} alt="Tercer Imagen" class="slider__img" />
      </figure>
    </section>

    <section class="slider__body" data-id="4">
      <figure class="slider__picture">
        <Image src={Image4} alt="Cuarto Imagen" class="slider__img" />
      </figure>
    </section>
    
    <section class="slider__body" data-id="5">
      <figure class="slider__picture">
        <Image src={Image5} alt="Quinto Imagen" class="slider__img" />
      </figure>
    </section>
    
    <section class="slider__body" data-id="6">
      <figure class="slider__picture">
        <Image src={Image6} alt="Sexto Imagen" class="slider__img" />
      </figure>
    </section>

    <img src="/Images/Icons/rightarrow.svg" class="slider__arrow" id="next" alt="right" />
  </div>
</section>

<script src="./Carousel.js"></script>
