---
import { Image } from "astro:assets";
import SEP from "../../public/Images/Icons/SEP.png";
import SEPH from "../../public/Images/Icons/SEPH.png";
// import Header from "../components/Hero.astro"

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/Images/Icons/EscuelaLogo.jpg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="header">
      <a href="https://www.gob.mx/sep">
        <Image src={SEP} alt="SEP" class="Logo" />
      </a>
      <a href="https://sep.hidalgo.gob.mx/">
        <Image src={SEPH} alt="SEPH" class="Logo" />
      </a>
    </header>
    <!-- <Header class="header" /> -->
    <slot />
  </body>
</html>

<style>
  .header {
    /* position: fixed;
     width: 100%;
    z-index: 1; */
    width: 90%;
    padding: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 10%;
  }

  .Logo {
    width: 30%;
    height: 30%;
  }
</style>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    position: relative;
    min-width: 0;
  }
  html {
    font-family: system-ui, sans-serif;
    background-size: 224px;
    /* color-scheme: light dark; */
  }

  body {
    min-height: 100dvh;
  }
  /* header {
    position: fixed;
    width: 100%;
    z-index: 1;
  } */

  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
  }

  p {
    text-wrap: pretty;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  li {
    list-style: none;
  }
</style>
