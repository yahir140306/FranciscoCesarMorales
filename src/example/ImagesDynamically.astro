---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
}

// , altText
const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpg,png,gif}"`
  );
---

<div
  class="slider__body flex items-center justify-center opacity-0 transition duration-1500 ease-in-out"
>
  <Image
    src={images[imagePath]()}
    alt={altText}
    class="rounded-lg h-96 object-cover w-full"
  />
</div>
